<Tabs tabs="{{tabs}}" bindtabsItemChange="handletabsItemChange">
  <view class="order_main">
    <view class="order_item"
    wx:for="{{orders}}"
    wx:key="order_id">
      <view class="order_no_row order_item_flex">
        <view class="order_no_text">订单编号</view>
        <view class="order_no_value">{{item.order_number}}</view>
      </view>
      <view class="order_price_row order_item_flex">
        <view class="order_price_text">订单价格</view>
        <view class="order_price_value">￥{{item.order_price}}</view>
      </view>
      <view class="order_time_row order_item_flex">
        <view class="order_time_text">订单时间</view>
        <view class="order_time_value">{{item.create_time_cn}}</view>
      </view>
    </view>
  </view>
</Tabs>